            <style>
                .about-container {
                    padding-top: 70px;
                    background: linear-gradient(135deg, #f6f9fc 0%, #edf2f7 100%);
                }

                .animated-background {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    z-index: 0;
                    overflow: hidden;
                }

                .gradient-orb {
                    position: absolute;
                    border-radius: 50%;
                    filter: blur(80px);
                    opacity: 0.5;
                    animation: orbFloat 20s ease-in-out infinite;
                }

                .gradient-orb:nth-child(1) {
                    width: 500px;
                    height: 500px;
                    top: -100px;
                    left: -100px;
                    background: linear-gradient(45deg, rgba(33, 150, 243, 0.3), rgba(103, 58, 183, 0.3));
                }

                .gradient-orb:nth-child(2) {
                    width: 400px;
                    height: 400px;
                    bottom: -150px;
                    right: -100px;
                    background: linear-gradient(45deg, rgba(103, 58, 183, 0.3), rgba(33, 150, 243, 0.3));
                    animation-delay: -5s;
                }

                .gradient-orb:nth-child(3) {
                    width: 300px;
                    height: 300px;
                    top: 50%;
                    left: 50%;
                    background: linear-gradient(45deg, rgba(33, 150, 243, 0.2), rgba(103, 58, 183, 0.2));
                    animation-delay: -10s;
                }

                .about-hero {
                    position: relative;
                    padding: 6rem 2rem;
                    text-align: center;
                    z-index: 1;
                }

                .about-badge {
                    display: inline-block;
                    padding: 0.5rem 1rem;
                    background: linear-gradient(135deg, rgba(33, 150, 243, 0.1), rgba(103, 58, 183, 0.1));
                    border-radius: 50px;
                    font-size: 0.9rem;
                    color: #2196F3;
                    margin-bottom: 1.5rem;
                    animation: slideIn 0.5s ease-out;
                }

                .about-hero h1 {
                    font-size: clamp(2rem, 5vw, 3.5rem);
                    background: linear-gradient(45deg, #2196F3, #673AB7);
                    -webkit-background-clip: text;
                    background-clip: text;
                    color: transparent;
                    margin-bottom: 1.5rem;
                }

                .about-hero p {
                    font-size: clamp(1rem, 2vw, 1.25rem);
                    color: #666;
                    max-width: 800px;
                    margin: 0 auto;
                }

                .section-content {
                    max-width: 1200px;
                    margin: 0 auto;
                    padding: 4rem 2rem;
                    position: relative;
                    z-index: 1;
                }

                .section-content h2 {
                    text-align: center;
                    font-size: clamp(1.5rem, 3vw, 2.5rem);
                    margin-bottom: 3rem;
                    background: linear-gradient(45deg, #2196F3, #673AB7);
                    -webkit-background-clip: text;
                    background-clip: text;
                    color: transparent;
                }

                .mission-cards {
                    display: grid;
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                    gap: 2rem;
                    margin-top: 2rem;
                }

                .mission-card {
                    background: rgba(255, 255, 255, 0.9);
                    padding: 2rem;
                    border-radius: 20px;
                    text-align: center;
                    transition: all 0.3s ease;
                    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
                }

                .mission-card:hover {
                    transform: translateY(-10px);
                    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
                }

                .card-icon {
                    font-size: 2.5rem;
                    margin-bottom: 1rem;
                    display: inline-block;
                }

                .features-grid {
                    display: grid;
                    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                    gap: 2rem;
                }

                .feature-item {
                    text-align: center;
                    padding: 2rem;
                    background: rgba(255, 255, 255, 0.9);
                    border-radius: 20px;
                    transition: all 0.3s ease;
                }

                .feature-icon {
                    font-size: 2rem;
                    margin-bottom: 1rem;
                }

                .team-grid {
                    display: grid;
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                    gap: 3rem;
                }

                .team-member {
                    text-align: center;
                    padding: 1.5rem;
                    background: rgba(255, 255, 255, 0.9);
                    border-radius: 20px;
                    transition: all 0.3s ease;
                    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
                }

                .team-member:hover {
                    transform: translateY(-10px);
                    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
                }

                .member-image {
                    width: 180px;
                    height: 180px;
                    margin: 0 auto 1.5rem;
                    border-radius: 50%;
                    overflow: hidden;
                    border: 4px solid rgba(33, 150, 243, 0.2);
                    transition: all 0.3s ease;
                }

                .team-member:hover .member-image {
                    border-color: rgba(33, 150, 243, 0.5);
                    transform: scale(1.05);
                }

                .member-image img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    transition: all 0.3s ease;
                }

                .team-member h3 {
                    font-size: 1.3rem;
                    color: #333;
                    margin-bottom: 0.5rem;
                    font-weight: 600;
                }

                .team-member p {
                    color: #2196F3;
                    font-size: 0.9rem;
                    margin-bottom: 0.5rem;
                    font-weight: 500;
                }

                .member-location {
                    font-size: 0.85rem;
                    color: #666;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    gap: 0.5rem;
                    margin-top: 0.5rem;
                }

                .contact-cards {
                    display: grid;
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                    gap: 2rem;
                }

                .contact-card {
                    background: rgba(255, 255, 255, 0.9);
                    padding: 2rem;
                    border-radius: 20px;
                    text-align: center;
                    transition: all 0.3s ease;
                }

                @keyframes orbFloat {

                    0%,
                    100% {
                        transform: translate(0, 0) scale(1);
                    }

                    50% {
                        transform: translate(30px, -30px) scale(1.1);
                    }
                }

                @keyframes slideIn {
                    from {
                        transform: translateY(20px);
                        opacity: 0;
                    }

                    to {
                        transform: translateY(0);
                        opacity: 1;
                    }
                }

                /* Dark Mode */
                @media (prefers-color-scheme: dark) {
                    .about-container {
                        background: linear-gradient(135deg, #121212 0%, #1a1a1a 100%);
                    }

                    .about-hero p {
                        color: #a0a0a0;
                    }

                    .mission-card,
                    .feature-item,
                    .contact-card {
                        background: rgba(30, 35, 40, 0.9);
                        color: #fff;
                    }

                    .mission-card p,
                    .feature-item p,
                    .contact-card p {
                        color: #a0a0a0;
                    }

                    .team-member {
                        background: rgba(30, 35, 40, 0.9);
                    }

                    .team-member h3 {
                        color: #fff;
                    }

                    .member-location {
                        color: #a0a0a0;
                    }
                }

                /* Responsive Design */
                @media (max-width: 768px) {
                    .section-content {
                        padding: 3rem 1rem;
                    }

                    .mission-cards,
                    .features-grid,
                    .team-grid,
                    .contact-cards {
                        gap: 1.5rem;
                    }

                    .member-image {
                        width: 150px;
                        height: 150px;
                    }
                }

                .flag {
                    font-size: 1.2rem;
                    display: inline-block;
                    margin-left: 4px;
                }
            </style>

