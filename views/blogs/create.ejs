    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Form elements
            const categorySelect = document.getElementById('category');
            const selectIcon = document.querySelector('.select-icon');
            const otherCategoryDiv = document.querySelector('.other-category');
            const otherCategoryInput = document.getElementById('otherCategory');

            // Category select functionality
            if (categorySelect && selectIcon) {
                categorySelect.addEventListener('change', function () {
                    if (this.value) {
                        this.style.color = '#fff';
                    }

                    if (otherCategoryDiv && otherCategoryInput) {
                        if (this.value === 'other') {
                            otherCategoryDiv.style.display = 'block';
                            otherCategoryInput.required = true;
                            requestAnimationFrame(() => {
                                otherCategoryDiv.style.opacity = '1';
                                otherCategoryDiv.style.transform = 'translateY(0)';
                            });
                        } else {
                            otherCategoryDiv.style.display = 'none';
                            otherCategoryInput.required = false;
                        }
                    }
                });

                categorySelect.addEventListener('focus', () => {
                    selectIcon.style.transform = 'translateY(-50%) rotate(180deg)';
                });

                categorySelect.addEventListener('blur', () => {
                    selectIcon.style.transform = 'translateY(-50%) rotate(0)';
                });

                if (window.innerWidth >= 768) {
                    categorySelect.addEventListener('mousedown', function (e) {
                        e.preventDefault();
                        this.blur();
                        this.focus();
                        this.click();
                    });
                }
            }

            // Initialize other category div if it exists
            if (otherCategoryDiv) {
                otherCategoryDiv.style.opacity = '0';
                otherCategoryDiv.style.transform = 'translateY(-10px)';
                otherCategoryDiv.style.transition = 'all 0.3s ease';
            }

            // Word count and autosave functionality
            const textarea = document.getElementById('body');
            const wordCount = document.querySelector('.word-count');
            const readTime = document.querySelector('.read-time');

            if (textarea && wordCount && readTime) {
                textarea.addEventListener('input', function () {
                    const words = this.value.trim().split(/\s+/).filter(word => word.length > 0);
                    wordCount.textContent = `${words.length} words`;
                    readTime.textContent = `${Math.ceil(words.length / 200)} min read`;
                });
            }

            // Formatting buttons
            const formatButtons = document.querySelectorAll('.tool-btn');
            if (formatButtons.length > 0 && textarea) {
                formatButtons.forEach(btn => {
                    btn.addEventListener('click', function () {
                        const format = this.dataset.format;
                        const start = textarea.selectionStart;
                        const end = textarea.selectionEnd;
                        const selectedText = textarea.value.substring(start, end);

                        let replacement = '';
                        switch (format) {
                            case 'bold':
                                replacement = `**${selectedText}**`;
                                break;
                            case 'italic':
                                replacement = `_${selectedText}_`;
                                break;
                            case 'heading':
                                replacement = `\n# ${selectedText}`;
                                break;
                            case 'link':
                                replacement = `[${selectedText}](url)`;
                                break;
                            case 'image':
                                replacement = `![${selectedText}](image-url)`;
                                break;
                            case 'code':
                                replacement = `\`\`\`\n${selectedText}\n\`\`\``;
                                break;
                        }

                        textarea.value = textarea.value.substring(0, start) +
                            replacement +
                            textarea.value.substring(end);

                        this.classList.add('active');
                        setTimeout(() => this.classList.remove('active'), 200);
                    });
                });
            }
        });
    </script>

